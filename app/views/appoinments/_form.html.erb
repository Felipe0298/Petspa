<%= form_with(model: appoinment, class: "contents") do |form| %>
  <% if appoinment.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(appoinment.errors.count, "error") %> prohibited this appoinment from being saved:</h2>

      <ul>
        <% appoinment.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <h3 class="font-bold text-lg mb-3 mt-6">Personal details</h3>

  <p class="my-5  flex gap-5">
    <strong class="block font-medium mb-1">Owner:</strong>
    <%= current_user.first_name %>
  </p>

  <div class="my-5">
    <%= form.label :pet_id %>
    <%= form.collection_select :pet_id, current_user.pets, :id, :name, { prompt: "Select Pet" }, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>
  
  <%= form.hidden_field :local_id, value: params[:local_id] %>

  <div class="mb-6">
    <%= form.label :notes %>
    <%= form.rich_text_area :notes %>
  </div>

  <% if @appoinment.new_record? %>
    <div class="mb-6">
      <div class="rounded border-slate-300 border shadow-sm bg-white py-6 px-10 inline-block relative">
        <%= form.label :appoinment_type_id, "appoinment type" %>
        <input type="hidden" name="appoinment[appoinment_type_id]" value="<%= @appoinment_type.id %>">
        <div class="flex items-start">
          <div class="text-3xl font-bold mr-3"><%= @appoinment_type.name %>
            <%= render(BadgedComponent.new(appoinment_type: @appoinment_type)) %>
          </div>
        </div>
      </div>
    </div>
  <% else %>
    <%= @appoinment.appoinment_type.name %>
  <% end %>

  <div class="my-5">
    <%= form.label :start_at %>
    <%= form.datetime_field :start_at, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :end_at %>
    <%= form.datetime_field :end_at, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>